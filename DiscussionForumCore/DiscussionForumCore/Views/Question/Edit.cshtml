@model DiscussionForumCore.Models.Question

@{
    ViewData["Title"] = "Edit";
}
<h4 style="justify-content:center; display:flex;align-items:center">Question</h4>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="margin:2%">
                <label asp-for="question" class="control-label"></label>
                <input asp-for="question" class="form-control" />
                <span asp-validation-for="question" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:2%">
                <label asp-for="category" class="control-label"></label>
                <input asp-for="category" class="form-control" />
                <span asp-validation-for="category" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="CreateTime" class="control-label"></label>
                <input asp-for="CreateTime" class="form-control" />
                <span asp-validation-for="CreateTime" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="PhotoPath" class="control-label"></label>
                <input asp-for="PhotoPath" class="form-control" />
                <span asp-validation-for="PhotoPath" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="appUserId" class="control-label"></label>
                <select asp-for="appUserId" class="form-control" asp-items="ViewBag.appUserId"></select>
                <span asp-validation-for="appUserId" class="text-danger"></span>
            </div>

            <div class="form-group" hidden>
                <label asp-for="Name" class="control-label"></label>
                <select asp-for="Name" class="form-control" asp-items="ViewBag.appUserId"></select>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ProfilePic" class="control-label"></label>
                <select asp-for="ProfilePic" class="form-control" asp-items="ViewBag.appUserId"></select>
                <span asp-validation-for="ProfilePic" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:2%">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
